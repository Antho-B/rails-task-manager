<div class="container-md">
  <div class="d-flex justify-content-start">
    <h1>Tasks</h1>
  </div>

  <div class="d-flex flex-column mb-3 border-bottom">
    <ul class="p-0" style="list-style:none">
      <% @tasks.each do |task| %>
        <div class="p-2">
          <li>
            <input class="form-check-input" type="checkbox" value="<%= (task.completed).to_s %>">
            <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
          </li>
        </div>
      <% end %>
    </ul>
  </div>

  <p><%= link_to 'Add a task', new_task_path, class: "text-decoration-none" %></p>
</div>
