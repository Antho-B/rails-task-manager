<div class="container-md">
  <h1><%= @task.title%></h1>
  <div class="d-flex flex-column mb-3 border-bottom">
    <div class="border">
      <p><%= @task.details%></p>
    </div>
    <div class="border-bottom">
      <p><%= @task.completed %></p>
    </div>
  </div>
    <p><%= link_to "Back to list", tasks_path %></p>
    <p><%= link_to "Edit #{@task.title}", edit_task_path(@task) %></p>
  <p>
    <%= link_to 'Delete',
    task_path(@task),
    data: { turbo_method: :delete, turbo_confirm: 'Really?'}
    %>
  </p>
</div>
